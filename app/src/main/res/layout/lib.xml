<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#E41936">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="45dp"
            android:textColor="#f9f9f9"
            android:text="Library"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="end"
            android:textSize="200dp"

            android:entries="@array/lib"

            android:id="@+id/spinner2">

        </Spinner>
        <ImageView
            android:id="@+id/lib_go"

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/button_state"
            />

    </LinearLayout>


    <LinearLayout
android:gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/lunbo_lib"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:rollviewpager_play_delay="3000"
            >

        </com.jude.rollviewpager.RollPagerView>
    </LinearLayout>
    <LinearLayout

        android:layout_weight="3"
        android:id="@+id/lib_ll1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/lib_search"
        android:layout_height="wrap_content">

    </LinearLayout>
 <LinearLayout
     android:layout_weight="3"
     android:id="@+id/lib_ll2"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:background="@drawable/askus2"
     android:layout_height="wrap_content">

 </LinearLayout>


</LinearLayout>
