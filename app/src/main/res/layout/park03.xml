<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/park03"

    >


    <ImageSwitcher
        android:background="@drawable/wel_background"
        android:id="@+id/imageSwitcher3"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
    <Button
        android:text="last"
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="next"
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction:"
            android:textSize="40sp"
            android:textColor="#E41936"
            android:background="#fff"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pioneers Park, established in 1963, is a 668-acre (2.70 km2) nature preserve located at the intersections of South Coddington and West Van Dorn Streets in Lincoln, Nebraska and is operated by the Lincoln Parks and Recreation Department."
            android:textSize="20sp"
            android:textColor="#E41936"
            android:background="#fff"
            android:textStyle="bold"/>
    </LinearLayout>


