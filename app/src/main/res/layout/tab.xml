<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:layout_height="wrap_content"
    android:orientation="vertical"
android:background="#f90000"


    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c2c2c2">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/tab_ic_home"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/home_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:src="@drawable/home_ic"
        android:clickable="false"
        android:layout_marginTop="5dp"
        android:background="#E41936"/>
    <TextView
        android:id="@+id/home_ic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home"
        android:textColor="#ffffff"
        android:layout_marginBottom="3dp"/>


</LinearLayout>

    <LinearLayout
        android:id="@+id/tab_ic_catalog"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/catalog_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cate_ic"
            android:clickable="false"
            android:background="#ff0000"/>
        <TextView
            android:id="@+id/catalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="catalog"
            android:textColor="#ffffff"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_ic_search"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/search_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_ic"
            android:clickable="false"
            android:background="#ff0000"/>
        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"
            android:textColor="#ffffff"/>


    </LinearLayout>





    <LinearLayout
        android:id="@+id/tab_ic_info"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/info_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_ic"
            android:clickable="false"
            android:background="#ff0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="#ffffff"/>


    </LinearLayout>
    </LinearLayout>
    </LinearLayout>